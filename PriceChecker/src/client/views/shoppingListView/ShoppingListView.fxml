<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="640.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.views.shoppingListView.ShoppingListViewController">
   <children>
      <Text layoutX="14.0" layoutY="38.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Shopping List">
         <font>
            <Font size="24.0" />
         </font>
      </Text>
      <Button fx:id="backButton" layoutX="14.0" layoutY="601.0" mnemonicParsing="false" onAction="#handleClickMe" text="Back" />
      <TableView fx:id="shoppingListTable" layoutX="14.0" layoutY="53.0" prefHeight="537.0" prefWidth="295.0">
        <columns>
          <TableColumn fx:id="productNameColumn" prefWidth="75.0" text="Product Name" />
          <TableColumn fx:id="quantityColumn" prefWidth="75.0" text="Quantity" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button fx:id="clearShoppingListButton" layoutX="190.0" layoutY="601.0" mnemonicParsing="false" onAction="#handleClickMe" text="Clear Shopping List" />
      <TableView fx:id="totalPriceTable" layoutX="309.0" layoutY="53.0" prefHeight="537.0" prefWidth="324.0">
        <columns>
          <TableColumn fx:id="shopNameColumn" prefWidth="159.0" text="Shop Name" />
          <TableColumn fx:id="totalPriceColumn" prefWidth="166.0" text="Total Price" />
        </columns>
      </TableView>
      <TableView fx:id="unavailableProductsTable" layoutX="632.0" layoutY="53.0" prefHeight="537.0" prefWidth="363.0">
        <columns>
          <TableColumn fx:id="unavailableProductsColumn" prefWidth="184.0" text="Unavailable Products" />
            <TableColumn prefWidth="175.0" text="Products Available" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
